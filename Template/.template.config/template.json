{
  "$schema": "http://json.schemastore.org/template",
  "author": "AbrahamOM",
  "classifications": ["Web", "API", "Clean Architecture", "CQRS", "Template"],
  "identity": "CodeCraft.NET.CleanArchitecture.Template",
  "name": "CodeCraft.NET Clean Architecture Template",
  "shortName": "codecraft",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "description": "A Clean Architecture template for .NET with CQRS, Entity Framework, automatic code generation, and JWT authentication",
  "sourceName": "CodeCraft.NET",
  "preferNameDirectory": true,
  "guids": [
    "09bae888-39a7-46e2-90f5-7ccd2ce188fb",
    "A4F6432E-650D-227A-08A0-8733AEB4B29B"
  ],
  "symbols": {
    "DatabaseProvider": {
      "type": "parameter",
      "datatype": "choice",
      "choices": [
        {
          "choice": "SqlServer",
          "description": "Use SQL Server as database provider"
        },
        {
          "choice": "PostgreSQL",
          "description": "Use PostgreSQL as database provider"
        }
      ],
      "defaultValue": "SqlServer",
      "description": "The database provider to use"
    }
  },
  "primaryOutputs": [
    {
      "path": "CodeCraft.NET.sln"
    }
  ],
  "postActions": [
    {
      "condition": "(OS != \"Windows\")",
      "description": "Make scripts executable",
      "manualInstructions": [
        {
          "text": "Run 'chmod +x *.sh' to make shell scripts executable"
        }
      ],
      "actionId": "cb9a6cf3-4f5c-4860-b9d2-03a574959774",
      "args": {
        "+x": "*.sh"
      },
      "continueOnError": true
    },
    {
      "description": "Restore NuGet packages",
      "manualInstructions": [
        {
          "text": "Run 'dotnet restore' in the project directory"
        }
      ],
      "actionId": "210D431B-A78B-4D2F-B762-4ED3E3EA9025",
      "continueOnError": true
    }
  ]
}