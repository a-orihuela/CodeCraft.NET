<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CodeCraft.NET.MAUI.MainPage">

    <ScrollView>
        <StackLayout Padding="20" Spacing="24">

            <!-- Welcome Header -->
            <Frame Style="{StaticResource ElevatedCardStyle}">
                <StackLayout Spacing="16">
                    <Label Text="KetoPlanner Styles System" 
                       Style="{StaticResource PageHeaderStyle}" 
                       HorizontalOptions="Center" />

                    <Label Text="Modern, consistent cross-platform design system for .NET MAUI applications" 
                       Style="{StaticResource PageSubtitleStyle}" 
                       HorizontalTextAlignment="Center" />

                    <Button Text="View Styles Demo" 
                        Style="{StaticResource CreateButtonStyle}"
                        Clicked="OnViewStylesDemoClicked" />
                </StackLayout>
            </Frame>

            <!-- Quick Stats -->
            <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="*,*" RowSpacing="16" ColumnSpacing="16">
                <!-- Stat 1 -->
                <Frame Grid.Row="0" Grid.Column="0" Style="{StaticResource StatCardStyle}">
                    <StackLayout HorizontalOptions="Center">
                        <Label Text="50+" FontSize="24" FontFamily="OpenSansSemibold" 
                           HorizontalOptions="Center" TextColor="{StaticResource PrimaryDark}" />
                        <Label Text="Color Variations" FontSize="14" 
                           HorizontalOptions="Center" TextColor="{StaticResource PrimaryDark}" />
                    </StackLayout>
                </Frame>

                <!-- Stat 2 -->
                <Frame Grid.Row="0" Grid.Column="1" Style="{StaticResource StatCardStyle}">
                    <StackLayout HorizontalOptions="Center">
                        <Label Text="15+" FontSize="24" FontFamily="OpenSansSemibold" 
                           HorizontalOptions="Center" TextColor="{StaticResource PrimaryDark}" />
                        <Label Text="Button Styles" FontSize="14" 
                           HorizontalOptions="Center" TextColor="{StaticResource PrimaryDark}" />
                    </StackLayout>
                </Frame>

                <!-- Stat 3 -->
                <Frame Grid.Row="1" Grid.Column="0" Style="{StaticResource StatCardStyle}">
                    <StackLayout HorizontalOptions="Center">
                        <Label Text="5+" FontSize="24" FontFamily="OpenSansSemibold" 
                           HorizontalOptions="Center" TextColor="{StaticResource PrimaryDark}" />
                        <Label Text="Card Types" FontSize="14" 
                           HorizontalOptions="Center" TextColor="{StaticResource PrimaryDark}" />
                    </StackLayout>
                </Frame>

                <!-- Stat 4 -->
                <Frame Grid.Row="1" Grid.Column="1" Style="{StaticResource StatCardStyle}">
                    <StackLayout HorizontalOptions="Center">
                        <Label Text="100%" FontSize="24" FontFamily="OpenSansSemibold" 
                           HorizontalOptions="Center" TextColor="{StaticResource PrimaryDark}" />
                        <Label Text="Dark Mode" FontSize="14" 
                           HorizontalOptions="Center" TextColor="{StaticResource PrimaryDark}" />
                    </StackLayout>
                </Frame>
            </Grid>

            <!-- Feature Highlights -->
            <Label Text="Key Features" 
               FontSize="20" 
               FontFamily="OpenSansSemibold" 
               TextColor="{StaticResource Secondary}" />

            <!-- Feature Cards -->
            <Frame Style="{StaticResource CardStyle}">
                <StackLayout Spacing="12">
                    <Label Text="Function-Based Colors" 
                       FontSize="18" 
                       FontFamily="OpenSansSemibold" />
                    <Label Text="Each action has its specific color - Save (Green), Delete (Red), Edit (Orange), etc." />

                    <StackLayout Orientation="Horizontal" Spacing="8">
                        <Frame Style="{StaticResource BadgeStyle}" BackgroundColor="{StaticResource Success}">
                            <Label Text="Save" Style="{StaticResource StatusBadgeStyle}" />
                        </Frame>
                        <Frame Style="{StaticResource BadgeStyle}" BackgroundColor="{StaticResource Danger}">
                            <Label Text="Delete" Style="{StaticResource StatusBadgeStyle}" />
                        </Frame>
                        <Frame Style="{StaticResource BadgeStyle}" BackgroundColor="{StaticResource Warning}">
                            <Label Text="Edit" Style="{StaticResource StatusBadgeStyle}" />
                        </Frame>
                    </StackLayout>
                </StackLayout>
            </Frame>

            <Frame Style="{StaticResource CardStyle}">
                <StackLayout Spacing="12">
                    <Label Text="Cross-Platform Consistency" 
                       FontSize="18" 
                       FontFamily="OpenSansSemibold" />
                    <Label Text="Identical appearance and behavior across Windows, Android, iOS, and macOS." />
                </StackLayout>
            </Frame>

            <Frame Style="{StaticResource CardStyle}">
                <StackLayout Spacing="12">
                    <Label Text="Automatic Dark Mode" 
                       FontSize="18" 
                       FontFamily="OpenSansSemibold" />
                    <Label Text="All styles automatically adapt to system light/dark theme preferences." />
                </StackLayout>
            </Frame>

            <!-- Quick Actions -->
            <Label Text="Quick Actions" 
               FontSize="20" 
               FontFamily="OpenSansSemibold" 
               TextColor="{StaticResource Info}" />

            <Grid ColumnDefinitions="*,*" ColumnSpacing="12">
                <Button Grid.Column="0" 
                    Text="View Documentation" 
                    Style="{StaticResource OutlinePrimaryButtonStyle}"
                    Clicked="OnViewDocumentationClicked" />
                <Button Grid.Column="1" 
                    Text="Style Demo" 
                    Style="{StaticResource ViewButtonStyle}"
                    Clicked="OnViewStylesDemoClicked" />
            </Grid>

            <!-- Footer -->
            <Frame Style="{StaticResource CompactCardStyle}" Margin="0,20,0,40">
                <StackLayout>
                    <Label Text="Built with .NET 9 MAUI" 
                       FontSize="16" 
                       FontFamily="OpenSansSemibold" 
                       HorizontalTextAlignment="Center" />
                    <Label Text="Modern cross-platform development at its finest" 
                       FontSize="14" 
                       HorizontalTextAlignment="Center" 
                       TextColor="{StaticResource Gray500}" />
                </StackLayout>
            </Frame>

        </StackLayout>
    </ScrollView>

</ContentPage>
