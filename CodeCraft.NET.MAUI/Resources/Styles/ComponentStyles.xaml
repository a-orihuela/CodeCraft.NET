<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- ================================================================= -->
    <!-- MODERN CARD STYLES -->
    <!-- ================================================================= -->

    <!-- Main Card -->
    <Style x:Key="CardStyle" TargetType="Frame">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource DarkSurface}}" />
        <Setter Property="BorderColor" Value="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource DarkBorder}}" />
        <Setter Property="HasShadow" Value="False" />
        <Setter Property="CornerRadius" Value="16" />
        <Setter Property="Padding" Value="20" />
        <Setter Property="Margin" Value="8" />
        <Setter Property="Shadow">
            <Shadow Brush="{AppThemeBinding Light={StaticResource Gray300}, Dark={StaticResource Black}}" 
                    Offset="0,4" 
                    Radius="12" 
                    Opacity="0.1"/>
        </Setter>
    </Style>

    <!-- Elevated Card -->
    <Style x:Key="ElevatedCardStyle" TargetType="Frame">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource DarkSurface}}" />
        <Setter Property="BorderColor" Value="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource DarkBorder}}" />
        <Setter Property="HasShadow" Value="False" />
        <Setter Property="CornerRadius" Value="20" />
        <Setter Property="Padding" Value="24" />
        <Setter Property="Margin" Value="12" />
        <Setter Property="Shadow">
            <Shadow Brush="{AppThemeBinding Light={StaticResource Gray400}, Dark={StaticResource Black}}" 
                    Offset="0,8" 
                    Radius="24" 
                    Opacity="0.15"/>
        </Setter>
    </Style>

    <!-- Compact Card -->
    <Style x:Key="CompactCardStyle" TargetType="Frame">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource DarkSurface}}" />
        <Setter Property="BorderColor" Value="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource DarkBorder}}" />
        <Setter Property="HasShadow" Value="False" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="Padding" Value="16" />
        <Setter Property="Margin" Value="4" />
        <Setter Property="Shadow">
            <Shadow Brush="{AppThemeBinding Light={StaticResource Gray300}, Dark={StaticResource Black}}" 
                    Offset="0,2" 
                    Radius="8" 
                    Opacity="0.08"/>
        </Setter>
    </Style>

    <!-- Statistics Card -->
    <Style x:Key="StatCardStyle" TargetType="Frame">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource PrimaryLight}, Dark={StaticResource PrimaryDark}}" />
        <Setter Property="BorderColor" Value="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryAccent}}" />
        <Setter Property="HasShadow" Value="False" />
        <Setter Property="CornerRadius" Value="16" />
        <Setter Property="Padding" Value="20" />
        <Setter Property="Margin" Value="8" />
        <Setter Property="Shadow">
            <Shadow Brush="{StaticResource Primary}" 
                    Offset="0,4" 
                    Radius="12" 
                    Opacity="0.15"/>
        </Setter>
    </Style>

    <!-- Alert Card -->
    <Style x:Key="AlertCardStyle" TargetType="Frame">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource WarningLight}, Dark={StaticResource WarningDark}}" />
        <Setter Property="BorderColor" Value="{StaticResource Warning}" />
        <Setter Property="HasShadow" Value="False" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="Padding" Value="16" />
        <Setter Property="Margin" Value="8" />
    </Style>

    <!-- ================================================================= -->
    <!-- MODERN BORDER STYLES -->
    <!-- ================================================================= -->

    <!-- Main Border -->
    <Style x:Key="MainBorderStyle" TargetType="Border">
        <Setter Property="Stroke" Value="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource DarkBorder}}" />
        <Setter Property="StrokeThickness" Value="1"/>
        <Setter Property="StrokeShape" Value="RoundRectangle 16"/>
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource DarkSurface}}" />
        <Setter Property="Padding" Value="20"/>
        <Setter Property="Margin" Value="8"/>
        <Setter Property="Shadow">
            <Shadow Brush="{AppThemeBinding Light={StaticResource Gray300}, Dark={StaticResource Black}}" 
                    Offset="0,2" 
                    Radius="8" 
                    Opacity="0.1"/>
        </Setter>
    </Style>

    <!-- Input Border -->
    <Style x:Key="InputBorderStyle" TargetType="Border">
        <Setter Property="Stroke" Value="{AppThemeBinding Light={StaticResource Gray300}, Dark={StaticResource Gray600}}" />
        <Setter Property="StrokeThickness" Value="1"/>
        <Setter Property="StrokeShape" Value="RoundRectangle 12"/>
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource Gray50}, Dark={StaticResource Gray800}}" />
        <Setter Property="Padding" Value="16,12"/>
        <Setter Property="Margin" Value="4"/>
    </Style>

    <!-- Accent Border -->
    <Style x:Key="AccentBorderStyle" TargetType="Border">
        <Setter Property="Stroke" Value="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryAccent}}" />
        <Setter Property="StrokeThickness" Value="2"/>
        <Setter Property="StrokeShape" Value="RoundRectangle 12"/>
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource PrimaryLight}, Dark={StaticResource PrimaryDark}}" />
        <Setter Property="Padding" Value="16"/>
        <Setter Property="Margin" Value="8"/>
    </Style>

    <!-- ================================================================= -->
    <!-- FORM STYLES -->
    <!-- ================================================================= -->

    <!-- Form Group -->
    <Style x:Key="FormGroupStyle" TargetType="StackLayout">
        <Setter Property="Spacing" Value="8"/>
        <Setter Property="Margin" Value="0,16,0,0"/>
    </Style>

    <!-- Form Label -->
    <Style x:Key="FormLabelStyle" TargetType="Label">
        <Setter Property="FontFamily" Value="OpenSansSemibold"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Gray700}, Dark={StaticResource Gray300}}"/>
        <Setter Property="Margin" Value="4,0,0,4"/>
    </Style>

    <!-- Form Entry -->
    <Style x:Key="FormEntryStyle" TargetType="Entry">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource Gray50}, Dark={StaticResource Gray800}}" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />
        <Setter Property="PlaceholderColor" Value="{AppThemeBinding Light={StaticResource Gray400}, Dark={StaticResource Gray500}}" />
        <Setter Property="FontFamily" Value="OpenSansRegular"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="MinimumHeightRequest" Value="48"/>
        <Setter Property="Margin" Value="0"/>
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal" />
                    <VisualState x:Name="Disabled">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{StaticResource Gray200}" />
                            <Setter Property="TextColor" Value="{StaticResource Gray400}" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="Focused">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray700}}" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <!-- Form Picker -->
    <Style x:Key="FormPickerStyle" TargetType="Picker">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource Gray50}, Dark={StaticResource Gray800}}" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />
        <Setter Property="TitleColor" Value="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray400}}" />
        <Setter Property="FontFamily" Value="OpenSansRegular"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="MinimumHeightRequest" Value="48"/>
        <Setter Property="Margin" Value="0"/>
    </Style>

    <!-- ================================================================= -->
    <!-- BADGES AND LABELS -->
    <!-- ================================================================= -->

    <!-- Main Badge -->
    <Style x:Key="BadgeStyle" TargetType="Frame">
        <Setter Property="BackgroundColor" Value="{StaticResource Primary}" />
        <Setter Property="BorderColor" Value="Transparent" />
        <Setter Property="HasShadow" Value="False" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="Padding" Value="12,6" />
        <Setter Property="Margin" Value="4" />
        <Setter Property="HorizontalOptions" Value="Start"/>
        <Setter Property="VerticalOptions" Value="Center"/>
    </Style>

    <!-- Status Badge Label -->
    <Style x:Key="StatusBadgeStyle" TargetType="Label">
        <Setter Property="FontFamily" Value="OpenSansSemibold"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="TextColor" Value="{StaticResource White}"/>
        <Setter Property="HorizontalOptions" Value="Center"/>
        <Setter Property="VerticalOptions" Value="Center"/>
        <Setter Property="HorizontalTextAlignment" Value="Center"/>
        <Setter Property="VerticalTextAlignment" Value="Center"/>
    </Style>

    <!-- ================================================================= -->
    <!-- LIST STYLES -->
    <!-- ================================================================= -->

    <!-- Main ListView -->
    <Style x:Key="MainListViewStyle" TargetType="ListView">
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="SeparatorColor" Value="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray700}}" />
        <Setter Property="SeparatorVisibility" Value="Default" />
        <Setter Property="RefreshControlColor" Value="{StaticResource Primary}" />
        <Setter Property="RowHeight" Value="-1"/>
        <Setter Property="HasUnevenRows" Value="True"/>
    </Style>

    <!-- Main Collection View -->
    <Style x:Key="MainCollectionViewStyle" TargetType="CollectionView">
        <Setter Property="BackgroundColor" Value="Transparent" />
    </Style>

    <!-- ================================================================= -->
    <!-- NAVIGATION STYLES -->
    <!-- ================================================================= -->

    <!-- Page Header -->
    <Style x:Key="PageHeaderStyle" TargetType="Label">
        <Setter Property="FontFamily" Value="OpenSansSemibold"/>
        <Setter Property="FontSize" Value="28"/>
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}"/>
        <Setter Property="Margin" Value="20,24,20,16"/>
        <Setter Property="HorizontalOptions" Value="Start"/>
    </Style>

    <!-- Page Subtitle -->
    <Style x:Key="PageSubtitleStyle" TargetType="Label">
        <Setter Property="FontFamily" Value="OpenSansRegular"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray400}}"/>
        <Setter Property="Margin" Value="20,0,20,24"/>
        <Setter Property="HorizontalOptions" Value="Start"/>
    </Style>

    <!-- Menu Item -->
    <Style x:Key="MenuItemStyle" TargetType="Frame">
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="BorderColor" Value="Transparent" />
        <Setter Property="HasShadow" Value="False" />
        <Setter Property="Padding" Value="16,12" />
        <Setter Property="Margin" Value="8,4" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal" />
                    <VisualState x:Name="Selected">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{StaticResource PrimaryLight}" />
                            <Setter Property="BorderColor" Value="{StaticResource Primary}" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

</ResourceDictionary>