<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:CodeCraft.NET.MAUI.Views.Controls"
             x:Class="CodeCraft.NET.MAUI.Views.Layout.SidebarMenuView"
             x:Name="SidebarMenu">

    <ScrollView VerticalScrollBarVisibility="Default">
        <StackLayout Spacing="8" Padding="8">

            <!-- DASHBOARD SECTION (renamed from MAIN, single item) -->
            <controls:ExpansionView Title="DASHBOARD" 
                                  IsExpanded="True"
                                  ColorBarColor="{StaticResource MenuColor1}"
                                  x:Name="DashboardSection" />

        </StackLayout>
    </ScrollView>

</ContentView>