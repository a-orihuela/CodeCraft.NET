<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:CodeCraft.NET.MAUI.Extensions.Localization"
             xmlns:controls="clr-namespace:CodeCraft.NET.MAUI.Views.Controls"
             x:Class="CodeCraft.NET.MAUI.Views.LocalizationTestPage"
             Title="{local:Localize Settings}">

    <ScrollView>
        <StackLayout Padding="20" Spacing="20">
            
            <!-- Header -->
            <Frame Style="{StaticResource ElevatedCardStyle}">
                <StackLayout Spacing="10">
                    <Label Text="{local:Localize Language}" 
                           FontSize="24" 
                           FontAttributes="Bold"
                           HorizontalOptions="Center" />
                    
                    <Label Text="Localization Demo / Demo de Localizacion" 
                           FontSize="16" 
                           HorizontalOptions="Center"
                           TextColor="Gray" />
                </StackLayout>
            </Frame>

            <!-- Language Selector -->
            <Frame Style="{StaticResource CardStyle}">
                <StackLayout Spacing="15">
                    <Label Text="{local:Localize Language}" 
                           FontSize="18" 
                           FontAttributes="Bold" />
                    
                    <controls:LanguageSelector x:Name="LanguageSelector" 
                                               HorizontalOptions="Start" />
                </StackLayout>
            </Frame>

            <!-- Demo Content -->
            <Frame Style="{StaticResource CardStyle}">
                <StackLayout Spacing="15">
                    <Label Text="{local:Localize AppName}" 
                           FontSize="20" 
                           FontAttributes="Bold" />
                    
                    <!-- Common Buttons -->
                    <StackLayout Orientation="Horizontal" Spacing="10">
                        <Button Text="{local:Localize Save}" 
                                Style="{StaticResource SaveButtonStyle}" />
                        <Button Text="{local:Localize Edit}" 
                                Style="{StaticResource EditButtonStyle}" />
                        <Button Text="{local:Localize Delete}" 
                                Style="{StaticResource DeleteButtonStyle}" />
                    </StackLayout>

                    <!-- Simple Demo Elements -->
                    <StackLayout Spacing="10">
                        <Label Text="{local:Localize Dashboard}" FontAttributes="Bold" />
                        <Label Text="{local:Localize Settings}" FontAttributes="Bold" />
                        <Label Text="{local:Localize Language}" FontAttributes="Bold" />
                    </StackLayout>
                </StackLayout>
            </Frame>

            <!-- Days of Week -->
            <Frame Style="{StaticResource CardStyle}">
                <StackLayout Spacing="15">
                    <Label Text="Days of the Week" 
                           FontSize="18" 
                           FontAttributes="Bold" />
                    
                    <FlexLayout Direction="Row" Wrap="Wrap" JustifyContent="SpaceAround">
                        <Frame Style="{StaticResource BadgeStyle}" BackgroundColor="{StaticResource Secondary}">
                            <Label Text="{local:Localize Monday}" Style="{StaticResource StatusBadgeStyle}" />
                        </Frame>
                        <Frame Style="{StaticResource BadgeStyle}" BackgroundColor="{StaticResource Secondary}">
                            <Label Text="{local:Localize Tuesday}" Style="{StaticResource StatusBadgeStyle}" />
                        </Frame>
                        <Frame Style="{StaticResource BadgeStyle}" BackgroundColor="{StaticResource Secondary}">
                            <Label Text="{local:Localize Wednesday}" Style="{StaticResource StatusBadgeStyle}" />
                        </Frame>
                    </FlexLayout>
                </StackLayout>
            </Frame>

            <!-- Language Demo -->
            <Frame Style="{StaticResource CardStyle}">
                <StackLayout Spacing="15">
                    <Label Text="Language Options" 
                           FontSize="18" 
                           FontAttributes="Bold" />
                    
                    <StackLayout Spacing="10">
                        <Frame BackgroundColor="{StaticResource SuccessLight}" Padding="10">
                            <Label Text="{local:Localize English}" 
                                   TextColor="{StaticResource SuccessDark}" />
                        </Frame>
                        
                        <Frame BackgroundColor="{StaticResource InfoLight}" Padding="10">
                            <Label Text="{local:Localize Spanish}" 
                                   TextColor="{StaticResource InfoDark}" />
                        </Frame>
                    </StackLayout>
                </StackLayout>
            </Frame>

        </StackLayout>
    </ScrollView>

</ContentPage>