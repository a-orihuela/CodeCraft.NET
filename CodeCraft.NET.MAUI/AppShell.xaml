<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CodeCraft.NET.MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CodeCraft.NET.MAUI"
    xmlns:testViews="clr-namespace:CodeCraft.NET.MAUI.Views"
    xmlns:exampleViews="clr-namespace:CodeCraft.NET.MAUI.Views.Examples"
    Title="CodeCraft.NET.MAUI">

    <!-- Simple TabBar for demo -->
    <TabBar>
        <ShellContent
         Title="Home"
         ContentTemplate="{DataTemplate local:MainPage}"
         Route="MainPage" 
         Icon="home.png" />

        <ShellContent
         Title="DesktopAPI Demo"
         ContentTemplate="{DataTemplate exampleViews:DesktopApiExamplePage}"
         Route="DesktopApiExamplePage" 
         Icon="code.png" />

        <ShellContent
         Title="Design Tokens"
         ContentTemplate="{DataTemplate exampleViews:TokenDemoPage}"
         Route="TokenDemoPage" 
         Icon="palette.png" />
    </TabBar>

</Shell>
